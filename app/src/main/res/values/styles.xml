<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="topic_selector" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:textColor">@color/light_orange</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/light_orange</item>
        <item name="android:colorForeground">@color/teal_200</item>
    </style>
    <style name="topic_selector_theme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/teal_200</item>
    </style>
</resources>