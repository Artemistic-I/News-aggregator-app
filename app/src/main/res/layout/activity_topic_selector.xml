<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/selector_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopicSelector"
    android:orientation="vertical">
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/breaking_news_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        style="@style/topic_selector"
        android:text="@string/breaking_news" />
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/world_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/topic_selector"
        android:text="@string/world"
        />
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/business_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/topic_selector"
        android:text="@string/business" />
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/technology_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/topic_selector"
        android:text="@string/technology" />
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/entertainment_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/topic_selector"
        android:text="@string/entertainment" />
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/sports_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/topic_selector"
        android:text="@string/sports" />
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/science_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/topic_selector"
        android:text="@string/science" />
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/health_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/topic_selector"
        android:text="@string/health" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirm_btn"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="@string/confirm_btn"
        android:layout_gravity="right"
        android:layout_marginEnd="50dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>